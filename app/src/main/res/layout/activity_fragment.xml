<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/feed_layout"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_above="@id/lin_layout_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D3D3D3"/>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/lin_layout_1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/lock"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_lock_24"/>
                    <TextView
                        android:layout_marginLeft="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="internship"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="20sp"/>
                </LinearLayout>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11 members"
                    android:textColor="#000000"
                    android:textStyle="normal"
                    android:textSize="15sp"/>
            </LinearLayout>
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="70dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_baseline_search_24"/>
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_error_outline_24"/>
        </LinearLayout>
        <LinearLayout
            android:layout_above="@id/lin_layout_3"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/lin_layout_2"
            android:layout_below="@id/lin_layout_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_above="@id/lin_layout_3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D3D3D3"/>
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/lin_layout_3"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/layout_last"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/send_document"
                    android:padding="3dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_attach_file_24"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <EditText
                    android:layout_gravity="center"
                    android:id="@+id/edit_text"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:textColor="#000000"
                    android:hint="Message internship"/>
                <ImageView
                    android:padding="3dp"
                    android:layout_gravity="center"
                    android:id="@+id/send_message_btn"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:src="@drawable/send_message"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true" />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@id/layout_last"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_thumbnil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
    <ImageView
        android:id="@+id/full_image"
        android:visibility="gone"
        android:src="@drawable/profile_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>