<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_rv_main_heading"
        android:text="Main heading"
        android:textColor="@color/text_color"
        android:textSize="12sp"
        android:paddingStart="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:typeface="serif"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:paddingBottom="5dp"
        android:visibility="visible"
        android:paddingTop="30dp"
        android:paddingLeft="10dp"
        android:layout_alignParentLeft="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_items"
        android:text="Item 1"
        android:layout_below="@+id/tv_rv_main_heading"
        android:textColor="@color/text_color"
        android:textStyle="normal"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_marginLeft="20dp" />
    <!--<ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imgV_rv_main_add"
        android:src="@drawable/ic_add"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        />-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_item_id"
        android:layout_below="@id/tv_items"
        android:text="group id"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:visibility="gone"
        android:layout_marginLeft="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_group_id"
        android:layout_below="@id/tv_items"
        android:text="group id"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:visibility="gone"
        android:layout_marginLeft="20dp" />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_mid_frag_nested"
        android:layout_below="@+id/tv_rv_main_heading"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:visibility="gone"
        android:layout_marginLeft="20dp" />

</RelativeLayout>