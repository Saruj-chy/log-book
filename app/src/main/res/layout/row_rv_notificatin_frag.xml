<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/imgV_notificationIcon"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            android:src="@drawable/ic_person"
            android:scaleType="centerCrop"
            android:layout_alignParentLeft="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_notification_title"
            android:layout_toRightOf="@+id/imgV_notificationIcon"
            android:text="Notification tilte"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_marginLeft="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_notification_short_desc"
            android:layout_toRightOf="@+id/imgV_notificationIcon"
            android:text="This is notification description"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/tv_notification_title"
            android:layout_marginLeft="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_notification_date"
            android:layout_alignParentEnd="true"
            android:text="20 Aug"
            android:textSize="10sp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" />
    </RelativeLayout>



</androidx.cardview.widget.CardView>